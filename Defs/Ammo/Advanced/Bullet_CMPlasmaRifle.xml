<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoCMPlasmaRifle</defName>
      <label>CM Plasma Rifle charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_CMPlasmaRifle</defName>
    <label>Plasma</label>
    <ammoTypes>
      <Ammo_CMPlasmaRifle>Bullet_CMPlasmaRifle</Ammo_CMPlasmaRifle>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="CM PlasmaRifleBase" ParentName="AmmoBase" Abstract="True">
    <description>CM Plasma Rifle ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoCMPlasmaRifle</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="CMPlasmaRifleBase">
    <defName>Ammo_CMPlasmaRifle</defName>
    <label>CM Plasma Rifle cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/FuelCell/Thermobaric</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseCMPlasmaRifle" ParentName="BaseBullet" Abstract="true">
	<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
    <graphicData>
      <texPath>Things/IGCore/Projectile/PlasShotLrgRED</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>IG_CMBomb</damageDef>
      <speed>120</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseCMPlasmaRifle">
    <defName>Bullet_CMPlasmaRifle</defName>
    <label>Plasma shot</label>
    <projectile>
      <damageAmountBase>100</damageAmountBase>
      <armorPenetration>1.5</armorPenetration>
	  <explosionRadius>1.10</explosionRadius>
	  <soundExplode>IGPLS_Explosion</soundExplode>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_CMPlasmaRifle</defName>
    <label>make Chaos Plasma Rifle cartridge x20</label>
    <description>Craft 20 Chaos Plasma Rifle cartridges.</description>
    <jobString>Making Chaos Plasma Rifle cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_PlasmaRifle>20</Ammo_PlasmaRifle>
    </products>
	<researchPrerequisite>WRPlasmaRifle</researchPrerequisite>
  </RecipeDef>
	
</Defs>