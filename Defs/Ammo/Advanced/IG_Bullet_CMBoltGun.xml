<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoCMBoltGun</defName>
      <label>CMBoltGun charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_CMBoltGun</defName>
    <label>Bolt</label>
    <ammoTypes>
      <Ammo_CMBoltGun>Bullet_CMBoltGun</Ammo_CMBoltGun>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="CMBoltGunBase" ParentName="AmmoBase" Abstract="True">
    <description>Chaos Marine Bolter ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoCMBoltGun</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="CMBoltGunBase">
    <defName>Ammo_CMBoltGun</defName>
    <label>Chaos Marine Bolter cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseCMBoltGun" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/IGCore/Projectile/BoltProjectileMk1-MED</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>IG_CMBomb</damageDef>
      <speed>100</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseBoltGun">
    <defName>Bullet_CMBoltGun</defName>
    <label>BoltGun bullet</label>
    <projectile>
      <damageAmountBase>40</damageAmountBase>
      <armorPenetration>0.75</armorPenetration>
	  <explosionRadius>1.01</explosionRadius>
	  <soundExplode>IGSML_Explosion</soundExplode>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_CMBoltGun</defName>
    <label>make Chaos Marine BoltGun cartridge x90</label>
    <description>Craft 90 Chaos Marine BoltGun cartridges.</description>
    <jobString>Making Chaos Marine BoltGun cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_CMBoltGun>90</Ammo_CMBoltGun>
    </products>
	<researchPrerequisite>WRBoltGun</researchPrerequisite>
  </RecipeDef>
	
</Defs>