<Patch>

<!--QX==================== Imperial Guard Core Mod - Ranged Weapon LasPistol =========================QX-->
    <Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
    <defName>Gun_TGLasPistol</defName>
    <statBases>
		
        
        <SightsEfficiency>0.45</SightsEfficiency>
        <ShotSpread>0.11</ShotSpread>
        <SwayFactor>1.2</SwayFactor>
        <Bulk>5.1</Bulk> 
	</statBases>
    <Properties>
		<verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_LasPistol</defaultProjectile>
		<ticksBetweenBurstShots>20</ticksBetweenBurstShots>
        <burstShotCount>4</burstShotCount>
        <warmupTime>0.3</warmupTime>
        <range>25</range>
        <soundCast>LasGunSound</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
		<recoilAmount>1.5</recoilAmount>
		<recoilPattern>Regular</recoilPattern>
	</Properties>
    <AmmoUser>
      <magazineSize>12</magazineSize>
      <reloadTime>4.75</reloadTime>
      <ammoSet>AmmoSet_LasPistol</ammoSet>
    </AmmoUser>
    <FireModes>
		<aiUseBurstMode>TRUE</aiUseBurstMode>
        <aiAimMode>SuppressFire</aiAimMode>
        <aimedBurstShotCount>4</aimedBurstShotCount>
	</FireModes>
    <weaponTags>
		<li>TGLasPistol</li>
	</weaponTags>
    
  </Operation>
  
