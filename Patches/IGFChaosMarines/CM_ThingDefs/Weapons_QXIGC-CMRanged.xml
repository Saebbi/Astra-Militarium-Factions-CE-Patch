<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>IG_Gun_CMBoltGun</defName>
		<statBases>
			
			
			<SightsEfficiency>1.1</SightsEfficiency>
			<ShotSpread>0.12</ShotSpread>
			<SwayFactor>1.4</SwayFactor>
			<Bulk>14.2</Bulk> 
		</statBases>
		<Properties>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_CMBoltGun</defaultProjectile>
			<warmupTime>3.0</warmupTime>
			<range>30</range>
			<ticksBetweenBurstShots>15</ticksBetweenBurstShots>
			<burstShotCount>3</burstShotCount>
			<soundCast>BoltGunSound</soundCast>
			<soundCastTail>GunTail_Heavy</soundCastTail>
			<muzzleFlashScale>13</muzzleFlashScale>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
			<recoilAmount>2.1</recoilAmount>
			<recoilPattern>Regular</recoilPattern>
		</Properties>
		<AmmoUser>
			<magazineSize>30</magazineSize>
			<reloadTime>4.75</reloadTime>
			<ammoSet>AmmoSet_CMBoltGun</ammoSet>
		</AmmoUser>
		<FireModes />
		<weaponTags>
			<li>CMBoltGun</li>
		</weaponTags>
	</Operation>

